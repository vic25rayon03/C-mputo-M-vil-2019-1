//:<----------------------Estructuras--------------------------->
struct Song
{
    let title: String
    var artist: String
    let duration: Int
}
var cancion = Song (title: Hola, artist: Mundo, duration: 99)
var cancion2 = Song (title: Adios, artist: Mundo, duration: 000)
cancion.artist


struct Song
{
    let title: String //Protegido
    var title2: String
    var artist: String
    let duration: Int
}
var cancion = Song (title: "Hola", title2:"Cmbio", artist: "Mundo", duration: 99)
var cancion2 = Song (title: "Adios", title2:"Cambio", artist: "Mundo", duration: 000)
cancion.artist
cancion.title
cancion2.artist
cancion2.title
cancion2.duration
Song.title2 = "Yes yes"
