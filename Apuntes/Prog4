//: ciclo: for
let friends = ["Name1","Name2","Name3","Name4","Name5"]
for friend in friends
{
    let sparklyFriend = ";+\(friend);+"
    print("Oye\(sparklyFriend), te invito a mi fiesta el viernes")
}
